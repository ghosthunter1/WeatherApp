<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/recyclerview_day"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/recyclerview_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/recyclerview_day" />

    <TextView
        android:id="@+id/recyclerview_description"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/recyclerview_image"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/recyclerview_temp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_toRightOf="@id/recyclerview_description"
        android:textColor="#fff"
        android:textSize="15sp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/home_icon"
        android:layout_marginTop="20dp"
        android:src="@drawable/favorite" />

    <ImageView
        android:id="@+id/unit_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/favorite_icon"
        android:layout_marginTop="20dp"
        android:src="@drawable/temperatureunit" />


    <TextView
        android:id="@+id/navigation_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/home_icon"
        android:text="Home"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/navigation_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/favorite_icon"
        android:text="Favorite"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/navigation_temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="69dp"
        android:layout_toRightOf="@id/favorite_icon"
        android:text="â„ƒ"
        android:textSize="15dp" />


</RelativeLayout>